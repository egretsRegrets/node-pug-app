mixin review(review)
    .review__header
        .review__author
            img.avatar(src=`${review.author.gravatar}`)
            p= review.author.name
        .review__stars(tite=`Rated ${review.rating} stars out of 5`)
            = `★`.repeat(review.rating)
            = `☆`.repeat(5 - review.rating)
        time.review__time(datetime=review.created)
            // use moment.js library made available in helpers
            = h.moment(review.created).fromNow()
    .review__body
        p= review.text

        